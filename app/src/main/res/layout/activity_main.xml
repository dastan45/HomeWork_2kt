<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_urlImage"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginVertical="@dimen/forAll"
        tools:src="@mipmap/ic_launcher"
        tools:ignore="ContentDescription" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/forAll"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:endIconMode="clear_text">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Url_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et1"/>

         </com.google.android.material.textfield.TextInputLayout>
        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_linkImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/forAll"
            android:backgroundTint="@color/red"
            android:text="@string/submit"/>
            
            
        <Button
            android:id="@+id/btn_randomLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/forAll"
            android:backgroundTint="@color/red"
            android:text="@string/RandomLink"/>

            
    </LinearLayout>
    
</LinearLayout>